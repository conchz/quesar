<?xml version="1.0" encoding="UTF-8"?>

<!--
    Doc: https://logback.qos.ch/manual/configuration.html
         https://logback.qos.ch/manual/layouts.html#coloring
-->

<configuration>
    <property name="APP_NAME" value="quesar"/>
    <contextName>${APP_NAME}</contextName>
    <conversionRule conversionWord="ip" converterClass="io.quesar.starter.logging.IpConverter"/>
    <conversionRule conversionWord="pid" converterClass="io.quesar.starter.logging.PidNumberConverter"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <charset>UTF-8</charset>
            <pattern>
                [%green(%ip)] %d{yyyy-MM-dd HH:mm:ss.SSS} %magenta(%pid) [%thread] %highlight(%-5level) %cyan(%logger{64}) - %msg%n
            </pattern>
        </encoder>
    </appender>

    <appender name="ASYNCSTDOUT" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="STDOUT"/>
    </appender>

    <logger name="ch.qos.logback" level="WARN"/>
    <logger name="io.vertx" level="INFO"/>

    <root>
        <level value="INFO"/>
        <appender-ref ref="ASYNCSTDOUT"/>
    </root>
</configuration>
